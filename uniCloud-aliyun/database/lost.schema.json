{
	"bsonType": "object",
	"required": [
		"name"
	],
	"permission": {
		"read": true,
		"create": true,
		"update": true, //本人及管理员可修改
		"delete": true
		// "read": "doc.user_id == auth.uid && doc.article_status == 0 || doc.article_status == 1",
		// "create": "auth.uid != null",
		// "update": "doc.user_id == auth.uid || 'webadmin'in auth.role", //本人及管理员可修改
		// "delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（商品 ID），系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"description": "文章作者ID， 参考`uni-id-users` 表",
			"foreignKey": "uni-id-users._id",
			"defaultValue": {
				"$env": "uid"
			}
		},
		"category_id": {
			"bsonType": "string",
			"description": "需求分类 id，参考`opendb-mall-categories`表",
			"foreignKey": "lost-categories._id"
		},
		// "goods_sn": {
		// 	"bsonType": "string",
		// 	"description": "商品的唯一货号",
		// 	"title": "货号",
		// 	"trim": "both"
		// },
		"name": {
			"bsonType": "string",
			"description": "简单标题",
			"title": "需求",
			"trim": "both"
		},
		"keywords": {
			"bsonType": "string",
			"description": "关键字，为搜索引擎收录使用",
			"title": "关键字",
			"trim": "both"
		},
		"lost_desc": {
			"bsonType": "string",
			"description": " 详细描述",
			"title": "详细描述",
			"trim": "both"
		},
		"lost_place": {
			"bsonType": "string",
			"description": "拾/失物地址",
			"title": "拾/失物地址",
			"trim": "both"
		},
		 
		"contact": {
			"bsonType": "string",
			"description": "联系方式",
			"title": "联系方式",
			"trim": "both"
		},
		"lost_thumb": {
			"bsonType": "file",
			// "description": "快递商品缩略图，用于在列表或搜索结果中预览显示",
			"title": "商品封面图"
			// "pattern": "^(http://|https://|/|./|@/)\\S",
			// "trim": "both"
		},
		// "goods_banner_imgs": {
		// 	"bsonType": "array",
		// 	"description": "商品详情页的banner图地址"
		// },
		"lost_desc": {
			"bsonType": "string",
			"description": "详细描述",
			"title": "详细描述",
			"trim": "right"
		},

		"add_date": {
			"bsonType": "timestamp",
			"description": "上架时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"last_modify_date": {
			"bsonType": "timestamp",
			"description": "最后修改时间",
			"defaultValue": {
				"$env": "now"
	}
			}
		},
		"version": "0.0.1"
	}