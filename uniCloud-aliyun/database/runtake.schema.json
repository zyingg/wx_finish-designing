		// "delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（商品 ID），系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"description": "评论者ID，参考`uni-id-users` 表",
			"defaultValue": {
				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id"
		},
		"category_id": {
			"bsonType": "string",
			"description": "需求分类 id，参考`opendb-mall-categories`表",
			"foreignKey": "runtake-categories._id",
			"enum": {
				"collection": "runtake-categories",
				"field": "_id as value, name as text"
			}
		},
		// "goods_sn": {
		// 	"bsonType": "string",
		// 	"description": "商品的唯一货号",
		// 	"title": "货号",
		// 	"trim": "both"
		// },
		"name": {
			"bsonType": "string",
			"description": "需求简单标题",
			"title": "需求",
			"trim": "both"
		},
		"keywords": {
			"bsonType": "string",
			"description": "关键字，为搜索引擎收录使用",
			"title": "关键字",
			"trim": "both"
		},
		"run_desc": {
			"bsonType": "string",
			"description": "代取需求详细描述",
			"title": "跑腿代取需求",
			"trim": "both"
		},
		"take_place": {
			"bsonType": "string",
			"description": "取货地址",
			"title": "取货地址",
			"trim": "both"
		},
		"run_place": {
			"bsonType": "string",
			"description": "送货地址",
			"title": "送货地址",
			"trim": "both"
		},
		"contact": {
			"bsonType": "string",
			"description": "联系方式",
			"title": "联系方式",
			"trim": "both"
		},
		// "run_thumb": {
		// 	"bsonType": "file",
		// 	// "description": "快递商品缩略图，用于在列表或搜索结果中预览显示",
		// 	"title": "商品封面图"
		// 	// "pattern": "^(http://|https://|/|./|@/)\\S",
		// 	// "trim": "both"
		// },
		// "goods_banner_imgs": {
		// 	"bsonType": "array",
		// 	"description": "商品详情页的banner图地址"
		// },
		"run_price": {
			"bsonType": "int",
			"description": "出价",
			"title": "出价"
		},

		"add_date": {
			"bsonType": "timestamp",
			"description": "上架时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"last_modify_date": {
			"bsonType": "timestamp",
			"description": "最后修改时间",
			"defaultValue": {
				"$env": "now"
	}
			}
		},
		"version": "0.0.1"
	}