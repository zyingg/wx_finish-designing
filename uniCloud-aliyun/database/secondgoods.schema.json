	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（商品 ID），系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"description": "文章作者ID， 参考`uni-id-users` 表",
			"foreignKey": "uni-id-users._id",
			"defaultValue": {
				"$env": "uid"
			}
		},
		// "username": {
		// 	"bsonType": "string",
		// 	"description": "文章作者username， 参考`uni-id-users` 表",
		// 	"foreignKey": "uni-id-users.username"
			 
		// },
		"category_id": {
			"bsonType": "string",
			"description": "分类 id，参考`opendb-mall-categories`表",
			"foreignKey": "secondgoods-categories._id",
			"enum": {
				"collection": "secondgoods-categories",
				"field": "_id as value, classname as text"
			}
		},
		
		"name": {
			"bsonType": "string",
			"description": "商品名称",
			"title": "名称",
			"trim": "both"
		},
		"keywords": {
			"bsonType": "string",
			"description": "商品关键字，为搜索引擎收录使用",
			"title": "关键字",
			"trim": "both"
		},
		"price": {
			"title": "价格",
			"trim": "both",
			"bsonType": "string",
			"description": "如：2208元/套"
		},
		"goods_desc": {
			"bsonType": "string",
			"description": "商品详细描述",
			"title": "详细描述",
			"trim": "right"
		},
		// "picurl": {
		// 	"title": "商品图",
		// 	"bsonType": "file"
		// 	// "bsonType": "string"
		// },
		// "goods_thumb": {
		// 	"bsonType": "string",
		// 	"description": "商品缩略图，用于在列表或搜索结果中预览显示",
		// 	"title": "缩略图地址",
		// 	"pattern": "^(http://|https://|/|./|@/)\\S",
		// 	"trim": "both"
		// },
		"goods_banner_imgs": {
			"bsonType": "array",
			 "arrayType": "file",
			"description": "商品详情页的banner图地址",
 "title": "照片",
					"multiple": true, // 允许选择多张图片，schema2code生效
			        "fileMediaType": "image", // 可选值 all|image|video 默认值为all,表示所有文件，image表示图片类型文件，video表示视频类型文件
			        "fileExtName": "jpg,png", // 扩展名过滤，多个用 , 分割
			        "maxLength": 9 // 限制最大数量
		},
		"remain_count": {
			"bsonType": "int",
			"description": "库存数量",
			"title": "库存数量"
		},
		"contact": {
			"bsonType": "string",
			"description": "联系方式",
			"title": "联系方式",
			"trim": "both"
		},
