		"checked":{
					"title": "状态",
					"bsonType": "bool",
					"defaultValue":true,
					"description": "显示状态 默认true展示 false不展示",
					"enum":[
						{
							"value":true,
							"text":"显示"
						},{
							"value":false,
							"text":"隐藏"
						}
					]
				},
