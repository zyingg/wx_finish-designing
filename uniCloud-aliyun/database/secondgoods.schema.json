		"checked":{
					"title": "状态",
					"bsonType": "int",
					"defaultValue":0,
					"description": "显示状态 默认true展示 false不展示",
					"enum":[
						{
							"value":0,
							"text":"显示"
						},{
							"value":1,
							"text":"隐藏"
						}
					]
				},
		"add_date": {
			"bsonType": "timestamp",
			"description": "上架时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"last_modify_date": {
			"bsonType": "timestamp",
			"description": "最后修改时间",
			"defaultValue": {
				"$env": "now"
			}
		}
		 
	},
	"version": "0.0.1"
}
